<?xml version="1.0" encoding="utf-8"?>

<com.flipboard.bottomsheet.BottomSheetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <allen.town.focus.twitter.views.widgets.HackyViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/buttons_layout"
            android:paddingTop="12dp"
            android:paddingBottom="64dp"
            android:background="@drawable/gradient_darker"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/share_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_round_share_24"
                    android:background="?roundSelector" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/save_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_round_arrow_circle_down_24"
                    android:background="?roundSelector"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/info_button_holder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/info_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_round_info_24"
                    android:background="?roundSelector" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</com.flipboard.bottomsheet.BottomSheetLayout>