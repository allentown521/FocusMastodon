<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/always_compose_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:src="?reply_button"
            android:contentDescription="Reply"
            android:scaleType="fitCenter" android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/always_like_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:src="?heart_button"
            android:contentDescription="Like"
            android:scaleType="fitCenter" android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/always_retweet_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:src="?retweetButton"
            android:contentDescription="Retweet"
            android:scaleType="fitCenter" android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/always_quote_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:src="?quote_button"
            android:contentDescription="Quote"
            android:scaleType="fitCenter" android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical">

        <ImageButton
            android:id="@+id/always_share_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:src="?shareButton"
            android:contentDescription="Share"
            android:scaleType="fitCenter" android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"/>

    </LinearLayout>

</LinearLayout>