<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:orientation="horizontal"
    android:animateLayoutChanges="true">

    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp">

        <ImageView
            android:id="@+id/web_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/blank_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            tools:visibility="visible"
            android:visibility="gone"
            android:src="@drawable/ic_round_image_24" />

        <allen.town.focus_common.views.AccentProgressBar
            android:id="@+id/progress_bar"

            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <allen.town.focus.twitter.views.widgets.text.FontPrefTextView
            android:id="@+id/web_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            tools:text="it is test"
            android:gravity="top"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textStyle="bold" />

        <allen.town.focus.twitter.views.widgets.text.FontPrefTextView
            android:id="@+id/web_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="it is test"
            android:ellipsize="end"
            android:gravity="top"
            android:maxLines="2"
            android:textColor="?android:textColorPrimary" />

    </LinearLayout>

</LinearLayout>