<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:layout_marginBottom="16dp"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/share_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Share Tweet"
            android:maxWidth="36dp"
            android:maxHeight="36dp"
            android:minWidth="36dp"
            android:minHeight="36dp"
            android:scaleType="center"
            android:src="@drawable/ic_round_share_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:visibility="gone"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/quote_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Quote Tweet"
            android:maxWidth="36dp"
            android:maxHeight="36dp"
            android:minWidth="36dp"
            android:minHeight="36dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_round_format_quote_24" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/bookmark_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Quote Tweet"
            android:maxWidth="32dp"
            android:maxHeight="32dp"
            android:minWidth="32dp"
            android:minHeight="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/round_bookmark_border_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/retweet_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Retweet"
            android:maxWidth="36dp"
            android:maxHeight="36dp"
            android:minWidth="36dp"
            android:minHeight="36dp"
            android:scaleType="center"
            android:src="@drawable/ic_retweet" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Like Tweet"
            android:maxWidth="36dp"
            android:maxHeight="36dp"
            android:minWidth="36dp"
            android:minHeight="36dp"
            android:scaleType="center"
            android:src="@drawable/ic_heart_outline" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <ImageButton
            android:id="@+id/reply_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:adjustViewBounds="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="Reply To Tweet"
            android:maxWidth="32dp"
            android:maxHeight="32dp"
            android:minWidth="32dp"
            android:minHeight="32dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_round_reply_24" />

    </LinearLayout>

</LinearLayout>